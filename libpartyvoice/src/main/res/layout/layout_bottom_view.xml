<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/bottom_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/audio_btn_list"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@color/white">
        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:background="@color/CZ4"
            />
        <ImageView
            android:id="@+id/bottom_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/audio_btn_play"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/bottom_play"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:id="@+id/bottom_title"
                style="@style/ContentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="党声"
                />
            <TextView
                android:id="@+id/bottom_content"
                style="@style/ContentSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="党声"
                />
        </LinearLayout>
    </RelativeLayout>
         <RelativeLayout
             android:id="@+id/buttom_mic"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="@color/red_title"
             >
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/audio_btn_mike"
                 android:layout_gravity="center"
                 android:layout_margin="15dp"
                 android:layout_centerInParent="true"
                 />
         </RelativeLayout>

</LinearLayout>
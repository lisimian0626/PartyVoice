<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClearEditText">
        <attr name="minLetterLen" format="integer"/>
        <attr name="maxLetterLen" format="integer"/>
        <attr name="errorTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SmsCodeView">
        <attr name="normal_text_color" format="color"/>
        <attr name="sent_text_color" format="color"/>
        <attr name="normal_text_size" format="dimension"/>
        <attr name="sent_text_size" format="dimension"/>
        <attr name="normal_btn_text" format="string"/>
        <attr name="sent_btn_text" format="string"/>
    </declare-styleable>
</resources>